.center.jumbotron
  %p#notice= notice

  %h1 Dishes

  %table
    %thead
      %tr
        %th Name
        %th Had it
        %th Lastly eaten on
        %th{:colspan=>'3'}
    %tbody
      - @dishes.each do |dish|
        %tr
          %td.name= dish.name
          %td.days= days_passed(dish.eaten_on)
          %td.eaten= eaten_on_formatted(dish.eaten_on)
  %br/

  = link_to 'New Dish', new_dish_path
