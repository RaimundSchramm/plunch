= form_for(@meal) do |f|
  - if @meal.errors.any?
    #error_explanation
      %h2= "#{pluralize(@meal.errors.count, "error")} prohibited this dummydish from being saved:"
      %ul>
      - @meal.errors.full_messages.each do |message|
        %li= message
  .field
    = f.label :dish
    %br/
    = select_tag 'dish', options_from_collection_for_select(Dish.all, 'id', 'name'), prompt: 'Select a dish'
  .field
    = f.label :eaten_on
    %br/
    = f.date_field :eaten_on
  .actions
    = f.submit
